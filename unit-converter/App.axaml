<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="unit_converter.App"
             RequestedThemeVariant="Dark">

    <Application.Styles>
        <FluentTheme></FluentTheme>
        <StyleInclude Source="Styles/Dark.axaml"/>
    </Application.Styles>
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <MergeResourceInclude Source="/Controls/ComboBox.axaml"></MergeResourceInclude>
                <MergeResourceInclude Source="/Controls/TextBox.axaml"></MergeResourceInclude>
                <MergeResourceInclude Source="/Controls/ComboBoxItem.axaml"></MergeResourceInclude>
                <MergeResourceInclude Source="/Controls/AutoCompleteBox.axaml"></MergeResourceInclude>
                <MergeResourceInclude Source="/Controls/Button.axaml"></MergeResourceInclude>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>