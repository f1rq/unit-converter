<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="350"
             x:Class="unit_converter.ConverterPage">
    <Grid
                Margin="40 20"
                RowSpacing="30"
                ColumnSpacing="20"
                >
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Button x:Name="BackButton" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Content="Back" Classes="Tertiary" />
            
                <TextBlock x:Name="TitleText" Grid.ColumnSpan="2" Text="Unit Converter" FontSize="22" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                
                <TextBox x:Name="FromValue" Grid.Column="0" Grid.Row="1" Watermark="Enter value to convert..."/>
                <ComboBox x:Name="FromUnitComboBox" Grid.Column="1" Grid.Row="1" SelectedIndex="0" HorizontalAlignment="Stretch">
                        <ComboBoxItem>cm</ComboBoxItem>
                        <ComboBoxItem>m</ComboBoxItem>
                        <ComboBoxItem>km</ComboBoxItem>
                        <ComboBoxItem>mi</ComboBoxItem>
                </ComboBox>
                
                <Button x:Name="UnitSwapBtn" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" HorizontalAlignment="Center" Classes="Tertiary" FontSize="20" Content="↕"/>
                
                <Border Grid.Column="0" Grid.Row="3" Background="#2F2F33" Padding="12 0" CornerRadius="4">
                        <TextBlock x:Name="ResultValue" Text="0" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </Border>
                
                <ComboBox x:Name="ToUnitComboBox" Grid.Column="1" Grid.Row="3" SelectedIndex="0" HorizontalAlignment="Stretch">
                        <ComboBoxItem>cm</ComboBoxItem>
                        <ComboBoxItem>m</ComboBoxItem>
                        <ComboBoxItem>km</ComboBoxItem>
                        <ComboBoxItem>mi</ComboBoxItem>
                </ComboBox>

                <Button x:Name="ResetButton" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Stretch" Classes="Danger">Reset</Button>
                <Button x:Name="ConvertButton" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Stretch" Classes="Success">Convert</Button>
        </Grid>
</UserControl>
